{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "max-line-length": [
      "warn",
      160
    ],
    "ordering": "warn",
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "mark-callable-contracts": "off"
  }
}